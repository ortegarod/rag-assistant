# Copy this file to .env and adjust values as needed

# Weaviate
WEAVIATE_URL=http://localhost:8080

# Chat Completions API (Jan AI, Ollama, etc.)
JANAI_API_URL=http://127.0.0.1:1337/v1/chat/completions
JANAI_MODEL_NAME=mistral-ins-7b-q4
JANAI_API_KEY=your_api_token_here

# Retry/backoff for LLM calls
MAX_RETRIES=3
BASE_DELAY=1

# Optional API key gating for the RAG Assistant API.
# If empty, auth is disabled. If set, clients must send header: X-API-Key: <one of these>
ALLOWED_API_KEYS=dev-key-123,another-key-456
